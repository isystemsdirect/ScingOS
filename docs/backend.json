
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "bio": {
          "type": "string",
          "description": "A short professional biography of the user."
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "certifications": {
          "type": "array",
          "description": "A list of the user's professional certifications.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the certification (e.g., InterNACHI Certified Professional Inspector)."
              },
              "id": {
                "type": "string",
                "description": "The license or certification number."
              },
              "certifyingBody": {
                "type": "string",
                "description": "The organization that issued the certification (e.g., InterNACHI)."
              },
              "expiresAt": {
                "type": "string",
                "format": "date",
                "description": "The expiration date of the certification."
              },
              "verified": {
                "type": "boolean",
                "description": "Indicates if the certification has been verified by Scingular."
              }
            },
            "required": ["name", "id", "certifyingBody"]
          }
        },
        "companyId": {
          "type": "string"
        },
        "createdAt": {
          "type": "number"
        }
      },
      "required": ["displayName", "email"]
    },
    "company": {
      "title": "Company",
      "description": "A company or organization.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "bio": {
          "type": "string",
          "description": "A description of the company."
        },
        "phone": {
          "type": "string",
          "description": "The company's primary phone number."
        },
        "billingCustomerId": {
          "type": "string"
        },
        "subscriptionId": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          }
        },
        "branding": {
          "type": "object",
          "properties": {
            "logoUrl": { "type": "string" },
            "primaryColor": { "type": "string" },
            "font": { "type": "string" }
          }
        },
        "createdAt": {
          "type": "number"
        }
      }
    },
    "key": {
      "title": "Key",
      "description": "A device or API key.",
      "type": "object",
      "properties": {
        "lariSubEngine": { "type": "string" },
        "requiredEntitlement": { "type": "string" },
        "serverBucket": { "type": "string" }
      }
    },
    "subscription": {
      "title": "Subscription",
      "description": "A subscription plan.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "entitlements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "limits": {
          "type": "object",
          "properties": {
            "inspectors": { "oneOf": [{ "type": "number" }, { "type": "string" }] },
            "storageGB": { "oneOf": [{ "type": "number" }, { "type": "string" }] }
          }
        }
      }
    },
    "standard": {
      "title": "Standard",
      "description": "An inspection standard document.",
      "type": "object",
      "properties": {
        "jurisdiction": { "type": "string" },
        "docType": { "type": "string" },
        "title": { "type": "string" },
        "fullTextUrl": { "type": "string" },
        "effectiveDate": { "type": "string", "format": "date" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "telemetry": {
      "title": "Telemetry",
      "description": "A telemetry event from a device.",
      "type": "object",
      "properties": {
        "keyId": {
          "type": "string"
        },
        "deviceId": {
          "type": "string"
        },
        "inspectionId": {
          "type": "string"
        },
        "timestampUtc": {
          "type": "string",
          "format": "date-time"
        },
        "location": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            },
            "alt": {
              "type": "number"
            }
          }
        },
        "payloadType": {
          "type": "string",
          "enum": [
            "lidar_pointcloud",
            "video_chunk",
            "image",
            "spectra",
            "sonar_ping",
            "thermal_frame",
            "audio_chunk"
          ]
        },
        "payloadRef": {
          "type": "string",
          "format": "uri"
        },
        "metadata": {
          "type": "object"
        }
      }
    },
    "client": {
      "title": "Client",
      "description": "A client for whom an inspection is performed.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The client's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The client's email address."
        },
        "phone": {
          "type": "string",
          "description": "The client's phone number."
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "state": { "type": "string" },
            "zip": { "type": "string" }
          },
          "description": "The client's mailing address."
        },
        "createdAt": {
          "type": "number"
        }
      },
      "required": ["name", "email"]
    }
  },
  "auth": {
    "providers": ["email", "google.com", "apple.com", "microsoft.com", "facebook.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "User profiles"
    },
    "/companies/{companyId}": {
      "schema": { "$ref": "#/entities/company" },
      "description": "Company information"
    },
    "/keys/{keyId}": {
      "schema": { "$ref": "#/entities/key" },
      "description": "Device and API keys"
    },
    "/subscriptions/{subscriptionId}": {
      "schema": { "$ref": "#/entities/subscription" },
      "description": "Subscription plans"
    },
    "/standards/{standardId}": {
      "schema": { "$ref": "#/entities/standard" },
      "description": "Inspection standards"
    },
    "/telemetry/{telemetryId}": {
      "schema": { "$ref": "#/entities/telemetry" },
      "description": "Telemetry events"
    },
    "/clients/{clientId}": {
        "schema": { "$ref": "#/entities/client"},
        "description": "Inspection clients"
    }
  }
}
