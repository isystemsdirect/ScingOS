{
  "version": "1.0",
  "theme": {
    "light": {
      "colors": {
        "surface": "#F6F8FA",
        "surfaceAlt": "#ECEFF3",
        "text": "#2B2F33",
        "textSecondary": "#4A5057",
        "border": "#C0C6CC",
        "accentPrimary": "#10C7B8",
        "accentSecondary": "#6D7EFF",
        "success": "#28C773",
        "warning": "#F5A623",
        "danger": "#E14A4A",
        "info": "#3BA0F0"
      }
    },
    "dark": {
      "colors": {
        "surface": "#1A1D20",
        "surfaceAlt": "#202428",
        "text": "#E6EBF0",
        "textSecondary": "#C0C6CC",
        "border": "#3A4046",
        "accentPrimary": "#10C7B8",
        "accentSecondary": "#6D7EFF",
        "success": "#28C773",
        "warning": "#F5A623",
        "danger": "#E14A4A",
        "info": "#3BA0F0"
      }
    }
  },
  "typography": {
    "fontFamily": "Inter, 'Segoe UI', Roboto, Arial, sans-serif",
    "sizes": { "xs": 12, "sm": 14, "base": 16, "md": 18, "lg": 20, "xl": 24, "xxl": 28 },
    "lineHeights": { "tight": 1.2, "base": 1.4, "comfortable": 1.6 },
    "weights": { "regular": 400, "medium": 500, "semibold": 600 }
  },
  "spacing": {
    "base": 8,
    "scale": [4, 8, 12, 16, 24, 32, 40]
  },
  "radius": { "sm": 6, "md": 10, "lg": 14 },
  "shadows": {
    "level0": "none",
    "level1": "0 1px 2px rgba(0,0,0,0.04)",
    "level2": "0 6px 16px rgba(0,0,0,0.12)",
    "overlay": "0 12px 28px rgba(0,0,0,0.24)"
  },
  "motion": {
    "duration": { "fast": 120, "base": 180, "slow": 240 },
    "easing": { "standard": "cubic-bezier(0.25, 0.8, 0.25, 1.0)", "outQuart": "cubic-bezier(0.165, 0.84, 0.44, 1)" }
  }
}
