{
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "@types/jest": "^29.5.14",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "npm --prefix client run dev",
    "type-check": "tsc -p tsconfig.json",
    "typecheck:scing": "tsc -p tools/tmp-tsconfig.json",
    "lint:scing": "eslint \"scing/**/*.{ts,tsx}\" \"tools/**/*.{js,mjs}\" --max-warnings=0",
    "test:scing:attractors": "node tools/attractors.selftest.mjs",
    "test:scing:gradients": "node tools/gradients.selftest.mjs",
    "test:scing:identity": "node tools/identity.selftest.mjs",
    "test:scing:expression": "node tools/expression.selftest.mjs",
    "test:scing:orderFocus": "node tools/orderFocus.selftest.mjs",
    "test:scing:posture": "node tools/posture.selftest.mjs",
    "test:scing:bane": "node tools/bane.entitlements.selftest.mjs",
    "test:scing:weather": "node tools/weather.severity.selftest.mjs",
    "test:scing:lari:weather": "node tools/lari.weather.integration.selftest.mjs",
    "test:scing:lari:input": "node tools/lari.input_validation.selftest.mjs",
    "test:scing:lari:prism": "node tools/lari.prism_graph.selftest.mjs",
    "test:scing:devices": "node tools/devices.router.selftest.mjs",
    "test:scing:domains:moisture": "node tools/domains.moisture.selftest.mjs",
    "test:scing:ui:weather": "node tools/weather.ui.selftest.mjs",
    "test:scing:ui:authority": "node tools/authority.ui.selftest.mjs",
    "test:scing:ui:contracts": "node tools/scing.ui.contracts.selftest.mjs",
    "canon:scan": "node tools/canon-scan.mjs",
    "test": "jest --config jest.config.cjs",
    "format": "prettier --write \"scing/**/*.{ts,tsx,js,mjs,json,md}\" \"tools/**/*.{js,mjs,json,md}\"",
    "format:check": "prettier --check \"scing/**/*.{ts,tsx,js,mjs,json,md}\" \"tools/**/*.{js,mjs,json,md}\"",
    "quality:scing": "npm run typecheck:scing && npm run lint:scing && npm run canon:scan && npm run format:check",
    "build": "npm --prefix client run build"
  }
}
