# ================================================
# ScingOS Environment Configuration
# ================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================================
# Application
# ================================================
NEXT_PUBLIC_APP_NAME=ScingOS
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_ENV=development

# ================================================
# Firebase Configuration
# ================================================
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Admin SDK (Server-side only)
# Path to your service account key JSON file
FIREBASE_SERVICE_ACCOUNT_KEY=./secrets/serviceAccountKey.json

# Or provide credentials directly (not recommended)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# ================================================
# AIP Protocol Configuration
# ================================================
# SCINGULAR AI backend URL
NEXT_PUBLIC_AIP_ENDPOINT=wss://api.scingular.ai/v1/aip
# or for development:
# NEXT_PUBLIC_AIP_ENDPOINT=ws://localhost:8080/v1/aip

# AIP Protocol Version
NEXT_PUBLIC_AIP_VERSION=1.0

# ================================================
# BANE Security Configuration
# ================================================
# Security tokens and keys
BANE_SECRET_KEY=your_bane_secret_key_here
BANE_ENCRYPTION_KEY=your_encryption_key_here

# Capability token expiration (in seconds)
BANE_TOKEN_EXPIRY=3600

# Rate limiting
BANE_RATE_LIMIT_REQUESTS=100
BANE_RATE_LIMIT_WINDOW=60

# ================================================
# Voice Interface (Scing) Configuration
# ================================================
# Wake word detection
NEXT_PUBLIC_WAKE_WORD=Hey Scing

# Speech-to-Text Provider (whisper, google, azure)
NEXT_PUBLIC_ASR_PROVIDER=whisper

# Text-to-Speech Provider (elevenlabs, google, azure)
NEXT_PUBLIC_TTS_PROVIDER=elevenlabs

# ================================================
# External API Keys
# ================================================
# OpenAI (for LLM and Whisper)
OPENAI_API_KEY=sk-...

# ElevenLabs (for TTS)
ELEVENLABS_API_KEY=your_elevenlabs_key

# Google Cloud (if using Google services)
GOOGLE_CLOUD_API_KEY=your_google_cloud_key

# Pinecone (for vector search)
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=scingos-vectors

# ================================================
# Device Integration APIs
# ================================================
# Building code APIs
ICC_API_KEY=your_icc_api_key
NFPA_API_KEY=your_nfpa_api_key

# Device manufacturer APIs (if applicable)
FLIR_API_KEY=your_flir_key
DJI_API_KEY=your_dji_key

# ================================================
# Third-Party Services
# ================================================
# SendGrid (email)
SENDGRID_API_KEY=SG...
SENDGRID_FROM_EMAIL=noreply@isystemsdirect.com

# Twilio (SMS/notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ================================================
# Analytics
# ================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ================================================
# Development & Debugging
# ================================================
# Enable debug logs
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Mock external services for testing
MOCK_EXTERNAL_APIS=false

# ================================================
# Security & CORS
# ================================================
# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://scingos.isystemsdirect.com

# Session secret
SESSION_SECRET=your_session_secret_here

# ================================================
# Database (if using additional databases)
# ================================================
# PostgreSQL (optional, for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/scingos

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# ================================================
# Feature Flags
# ================================================
# Enable experimental features
FEATURE_VOICE_COMMANDS=true
FEATURE_DEVICE_INTEGRATION=false
FEATURE_LIDAR_MAPPING=false
FEATURE_OFFLINE_MODE=false

# ================================================
# Performance
# ================================================
# Max file upload size (in MB)
MAX_FILE_SIZE=50

# Request timeout (in ms)
REQUEST_TIMEOUT=30000

# ================================================
# Notes
# ================================================
# - NEXT_PUBLIC_* variables are exposed to the browser
# - Other variables are server-side only
# - Always use strong, unique values for secrets
# - Rotate keys regularly for security
# - Never commit actual credentials to version control