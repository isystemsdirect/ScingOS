<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@color/background"
  android:padding="24dp">

  <!-- Header: App title + Settings gear -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="SpectroCAP™"
      android:textStyle="bold"
      android:textColor="@color/text_primary"
      android:textSize="20sp"
      android:letterSpacing="0.01" />

    <Button
      android:id="@+id/btnSettings"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:text="⚙"
      android:textSize="20sp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:textColor="@color/text_primary" />
  </LinearLayout>

  <!-- Centered canvas max width 520dp -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="520dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <!-- Status Card -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/btn_rounded_secondary">
        
        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="SpectroCAP™"
          android:textStyle="bold"
          android:textSize="18sp"
          android:textColor="@color/text_primary" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Secure Clipboard Bridge"
          android:textSize="14sp"
          android:textColor="@color/text_secondary"
          android:paddingTop="6dp" />

        <LinearLayout
          android:id="@+id/liveIndicator"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:paddingTop="12dp">

          <View
            android:id="@+id/indicatorDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dot_circle" />

          <TextView
            android:id="@+id/indicatorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver Offline"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:paddingStart="8dp" />
        </LinearLayout>
      </LinearLayout>

      <!-- Spacing -->
      <Space android:layout_width="match_parent" android:layout_height="20dp" />

      <!-- Primary Action: Send Clipboard -->
      <Button
        android:id="@+id/btnSendClipboard"
        style="@style/PremiumButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Send Clipboard" />

      <!-- Spacing -->
      <Space android:layout_width="match_parent" android:layout_height="12dp" />

      <!-- Secondary Action: Clear Clipboard (Quiet) -->
      <Button
        android:id="@+id/btnClearClipboard"
        style="@style/SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Clear Clipboard" />

      <!-- Spacing -->
      <Space android:layout_width="match_parent" android:layout_height="20dp" />

      <!-- Optional explicit Settings row -->
      <LinearLayout
        android:id="@+id/rowSettings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/surface_alt"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Settings"
          android:textColor="@color/text_primary"
          android:textSize="16sp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">"
          android:textColor="@color/text_secondary"
          android:textSize="18sp" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <!-- Footer Branding -->
  <include
    layout="@layout/view_brand_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</LinearLayout>
