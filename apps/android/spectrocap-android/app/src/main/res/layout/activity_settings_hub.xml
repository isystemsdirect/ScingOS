<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Settings"
      android:textStyle="bold"
      android:textSize="20sp"
      android:textColor="@color/text_primary" />

    <Space android:layout_width="match_parent" android:layout_height="12dp" />

    <!-- Section A: Receiver Configuration -->
    <LinearLayout
      android:id="@+id/cardReceiver"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/btn_rounded_secondary">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Receiver Configuration"
          android:textColor="@color/text_primary"
          android:textSize="16sp" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">"
          android:textColor="@color/text_secondary"
          android:textSize="18sp" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Endpoint (read-only by default)."
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />

      <Button
        android:id="@+id/btnEditConfiguration"
        style="@style/SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Edit Configuration" />
    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="20dp" />

    <!-- Section B: Network & Transport -->
    <LinearLayout
      android:id="@+id/cardTransport"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/btn_rounded_secondary">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Network &amp; Transport"
          android:textColor="@color/text_primary"
          android:textSize="16sp" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">"
          android:textColor="@color/text_secondary"
          android:textSize="18sp" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transport: HTTPS (locked). Certificate status and LAN description."
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />
    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="20dp" />

    <!-- Section C: Documents & Legal -->
    <LinearLayout
      android:id="@+id/cardDocuments"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/btn_rounded_secondary">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Documents &amp; Legal"
          android:textColor="@color/text_primary"
          android:textSize="16sp" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">"
          android:textColor="@color/text_secondary"
          android:textSize="18sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
          android:id="@+id/btnTerms"
          style="@style/SecondaryButton"
          android:layout_width="0dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:text="Terms of Use" />
        <Space android:layout_width="12dp" android:layout_height="match_parent" />
        <Button
          android:id="@+id/btnPrivacy"
          style="@style/SecondaryButton"
          android:layout_width="0dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:text="Privacy Policy" />
      </LinearLayout>
      <Space android:layout_width="match_parent" android:layout_height="12dp" />
      <Button
        android:id="@+id/btnLicenses"
        style="@style/SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Open Source Licenses" />
    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="20dp" />

    <!-- Section D: About -->
    <LinearLayout
      android:id="@+id/cardAbout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="16dp"
      android:background="@drawable/btn_rounded_secondary">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="About"
          android:textColor="@color/text_primary"
          android:textSize="16sp" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">"
          android:textColor="@color/text_secondary"
          android:textSize="18sp" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SpectroCAP™ • Powered by SCINGULAR™\n© 2026 Inspection Systems Direct Inc.\nCreation date: January 28, 2026"
        android:textColor="@color/text_secondary"
        android:textSize="13sp" />

      <Space android:layout_width="match_parent" android:layout_height="12dp" />
      <Button
        android:id="@+id/btnVersioning"
        style="@style/SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Versioning" />
    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="20dp" />

    <!-- Footer Branding -->
    <include
      layout="@layout/view_brand_footer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</ScrollView>
