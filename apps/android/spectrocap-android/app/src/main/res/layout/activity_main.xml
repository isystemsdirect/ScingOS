<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="14dp">

  <!-- Top Mode Bar -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/tabCapture"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Capture" />

    <Button
      android:id="@+id/tabClipboard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Clipboard" />

    <Button
      android:id="@+id/tabSettings"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Settings" />
  </LinearLayout>

  <!-- Shared Status -->
  <TextView
    android:id="@+id/statusText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:text="Ready."
    android:textSize="15sp" />

  <!-- ===================== CAPTURE PANEL ===================== -->
  <ScrollView
    android:id="@+id/panelCapture"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <Button
        android:id="@+id/captureBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image (Preview)" />

      <ImageView
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Preview" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Tip: this uses the system camera preview. If a camera app is missing/blocked, we show a friendly error instead of crashing." />
    </LinearLayout>
  </ScrollView>

  <!-- ===================== CLIPBOARD PANEL ===================== -->
  <ScrollView
    android:id="@+id/panelClipboard"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:visibility="gone">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <EditText
        android:id="@+id/clipEdit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="top|start"
        android:hint="SpectroCAP Clipboard… paste or import here"
        android:inputType="textMultiLine"
        android:padding="10dp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
          android:id="@+id/btnImportClip"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Import" />

        <Button
          android:id="@+id/btnCopyClip"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Copy" />

        <Button
          android:id="@+id/btnSendToPc"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Send to PC" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Goal: Copy on phone → Import → Send to PC → Right-click Paste on Windows." />
    </LinearLayout>
  </ScrollView>

  <!-- ===================== SETTINGS PANEL ===================== -->
  <ScrollView
    android:id="@+id/panelSettings"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:visibility="gone">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receiver Base URL (PC):"
        android:textSize="15sp"
        android:paddingTop="4dp" />

      <EditText
        android:id="@+id/receiverBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.x.x:8088"
        android:inputType="textUri"
        android:padding="10dp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
          android:id="@+id/btnSaveSettings"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Save" />

        <Button
          android:id="@+id/btnTestReceiver"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Test" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Test pings /health. Phone must be on same Wi-Fi as PC receiver." />
    </LinearLayout>
  </ScrollView>

</LinearLayout>
