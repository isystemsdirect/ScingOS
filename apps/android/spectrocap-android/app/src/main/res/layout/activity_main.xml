<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="0dp">

  <!-- Top App Bar with Settings Button (IonMetal) -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@color/primary"
    android:gravity="center_vertical">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/app_name"
      android:textColor="@color/on_primary"
      android:textSize="20sp"
      android:textStyle="bold"
      android:letterSpacing="0.01" />

    <Button
      android:id="@+id/btnSettings"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:text="⚙"
      android:textSize="20sp"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:textColor="@color/on_primary" />
  </LinearLayout>

  <!-- Mode Tab Bar (Rounded, Premium IonMetal) -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:spacing="10dp">

    <Button
      android:id="@+id/tabCapture"
      style="@style/PremiumButton"
      android:layout_width="0dp"
      android:layout_height="52dp"
      android:layout_weight="1"
      android:text="Capture" />

    <Space
      android:layout_width="10dp"
      android:layout_height="match_parent" />

    <Button
      android:id="@+id/tabClipboard"
      style="@style/PremiumButton"
      android:layout_width="0dp"
      android:layout_height="52dp"
      android:layout_weight="1"
      android:text="Clipboard" />
  </LinearLayout>

  <!-- Shared Status -->
  <TextView
    android:id="@+id/statusText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:paddingTop="10dp"
    android:text="Ready."
    android:textSize="14sp"
    android:textColor="@color/text_secondary" />

  <!-- ===================== CAPTURE PANEL ===================== -->
  <ScrollView
    android:id="@+id/panelCapture"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:padding="14dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <Button
        android:id="@+id/captureBtn"
        style="@style/PremiumButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Capture Image (Preview)" />

      <ImageView
        android:id="@+id/previewImage"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="18dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Preview" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Tip: uses the system camera preview. If a camera app is missing/blocked, we show a friendly error."
        android:textSize="13sp"
        android:textColor="@color/text_secondary" />
    </LinearLayout>
  </ScrollView>

  <!-- ===================== CLIPBOARD PANEL ===================== -->
  <ScrollView
    android:id="@+id/panelClipboard"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fillViewport="true"
    android:visibility="gone"
    android:padding="14dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <EditText
        android:id="@+id/clipEdit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="top|start"
        android:hint="SpectroCAP(TM) Clipboard… paste or import here"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:background="@drawable/btn_rounded_secondary"
        android:textColor="@color/text_primary" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:spacing="10dp">

        <Button
          android:id="@+id/btnImportClip"
          style="@style/PremiumButton"
          android:layout_width="0dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:text="Import" />

        <Space
          android:layout_width="10dp"
          android:layout_height="match_parent" />

        <Button
          android:id="@+id/btnCopyClip"
          style="@style/PremiumButton"
          android:layout_width="0dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:text="Copy" />

        <Space
          android:layout_width="10dp"
          android:layout_height="match_parent" />

        <Button
          android:id="@+id/btnSendToPc"
          style="@style/PremiumButton"
          android:layout_width="0dp"
          android:layout_height="52dp"
          android:layout_weight="1"
          android:text="Send" />
      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Copy phone → Import → Send to PC → Right-click Paste on Windows"
        android:textSize="13sp"
        android:textColor="@color/text_secondary" />
    </LinearLayout>
  </ScrollView>

  <!-- Footer Branding -->
  <include
    layout="@layout/view_brand_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</LinearLayout>
