{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SpectroCAP",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run devnpm run dev",
    "beforeBuildCommand": "npm run buildnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SpectroCAP",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
